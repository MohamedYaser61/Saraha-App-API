{
  "info": {
    "_postman_id": "be9e84f8-8c7a-4db2-9c40-5c8c4e675a88",
    "name": "Lec6 API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Endpoints for auth, users, and messages. Base URL uses {{baseUrl}}; JWT token uses {{jwt}}."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"demo\",\n  \"email\": \"demo@example.com\",\n  \"password\": \"P@ssw0rd\",\n  \"confirmPassword\": \"P@ssw0rd\",\n  \"Phone\": \"201000000000\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.token) {",
                  "  pm.environment.set('jwt', res.token);",
                  "}",
                  "pm.test('Status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@example.com\",\n  \"password\": \"P@ssw0rd\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": []
        },
        {
          "name": "Activate Account",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/activate_account/token={{activationToken}}",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "activate_account", "token={{activationToken}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          },
          "response": []
        },
        {
          "name": "Get User (auth)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["users", "change-password"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@example.com\",\n  \"currentPassword\": \"P@ssw0rd\",\n  \"newPassword\": \"N3wP@ssw0rd\",\n  \"confirmNewPassword\": \"N3wP@ssw0rd\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/update/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "update", "{{userId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"{{userId}}\",\n  \"email\": \"newemail@example.com\",\n  \"userName\": \"newname\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": []
        },
        {
          "name": "Upload Profile Image",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/upload",
              "host": ["{{baseUrl}}"],
              "path": ["users", "upload"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "profile",
                  "type": "file",
                  "src": ""
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Create Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["messages"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sender\": \"{{userId}}\",\n  \"receiver\": \"{{receiverId}}\",\n  \"content\": \"Hello from Postman\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": []
        },
        {
          "name": "All Messages (Inbox/Outbox)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/messages/allMessages/",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "allMessages", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"flag\": \"inbox\",\n  \"receiver\": \"{{userId}}\",\n  \"sender\": \"{{receiverId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": []
        },
        {
          "name": "Get Message",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/messages/{{messageId}}",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{messageId}}"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "jwt",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    },
    {
      "key": "receiverId",
      "value": ""
    },
    {
      "key": "messageId",
      "value": ""
    },
    {
      "key": "activationToken",
      "value": ""
    }
  ]
}
